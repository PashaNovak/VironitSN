<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/v_root_login_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/wrong_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorAccent" />

        <EditText
            android:id="@+id/login_auth_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_padding"
            android:layout_marginEnd="@dimen/default_padding"
            android:layout_marginStart="@dimen/default_padding"
            android:layout_marginTop="@dimen/default_padding"
            android:background="@drawable/et_login_activity_background"
            android:drawablePadding="@dimen/default_padding"
            android:drawableStart="@drawable/ic_person_24dp"
            android:hint="@string/login_hint"
            android:inputType="text"
            android:padding="@dimen/default_padding" />

        <EditText
            android:id="@+id/password_auth_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_padding"
            android:layout_marginEnd="@dimen/default_padding"
            android:layout_marginStart="@dimen/default_padding"
            android:background="@drawable/et_login_activity_background"
            android:drawablePadding="@dimen/default_padding"
            android:drawableStart="@drawable/ic_lock_24dp"
            android:hint="@string/password_hint"
            android:inputType="textPassword"
            android:padding="@dimen/default_padding" />

        <Button
            android:id="@+id/sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_padding"
            android:layout_marginEnd="@dimen/default_padding"
            android:layout_marginStart="@dimen/default_padding"
            android:layout_marginTop="@dimen/default_padding"
            android:background="@drawable/btns_login_activity_background"
            android:text="@string/btn_login_text"
            android:textColor="@color/color_white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/btn_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/if_google_circle_2"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/btn_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_padding"
                android:src="@drawable/if_facebook_circle_2"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/btn_twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_padding"
                android:src="@drawable/if_twitter_circle_2"/>

        </LinearLayout>

        <Button
            android:id="@+id/sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_padding"
            android:layout_marginEnd="@dimen/default_padding"
            android:layout_marginStart="@dimen/default_padding"
            android:layout_marginTop="@dimen/default_padding"
            android:background="@drawable/btns_login_activity_background"
            android:text="@string/btn_registration_text"
            android:textColor="@color/color_white" />

    </LinearLayout>

</RelativeLayout>